<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MBTI_W">

    <FrameLayout
        android:id="@+id/layout_header_title_upload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/text_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="title_upload"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Пожалуйста, пройдите опрос(для женщины):"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </FrameLayout>

    <Button
        android:id="@+id/button_next"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/warning_button_design"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:onClick="startCheck"
        android:textColor="@drawable/warning_button_design"
        android:text="Далее" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">


        <Button
            android:id="@+id/byes"
            android:layout_width="160dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginRight="90dp"
            android:background="@drawable/check_button"
            android:contentDescription="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="yes"
            android:text="Вас больше привлекают ситуации  определенные и завершенные"
            android:textColor="@drawable/click_button"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/bno"
            android:layout_width="160dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:background="@drawable/check_button"
            android:contentDescription="right"
            android:onClick="no"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Вас больше привлекают ситуации неопределенные и незавершенные"
            android:textColor="@drawable/click_button"
            tools:ignore="TouchTargetSizeCheck" />
    </FrameLayout>

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/warning_text"
        android:text="" />

    <TextView
        android:id="@+id/textViewCount"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:textColor="@color/warning_text"
        android:text="1/56" />


</RelativeLayout>