<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Questionnaire_3_4">

    <FrameLayout
        android:id="@+id/layout_header_title_upload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/text_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="title_upload"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Пожалуйста, пройдите опрос:"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/question_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/question_design"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Вопрос 3/12"
            android:textColor="@color/main_color" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/question_design"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Разница в возрасте (Вм - Вж)"
            android:textColor="@color/main_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_input3"
                android:layout_width="197dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/input_field_design">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input3"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Введите разницу(лет)"
                    android:inputType="numberSigned"
                    android:lines="1"
                    android:maxLength="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="@drawable/question_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/question_design"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Вопрос 4/12"
            android:textColor="@color/main_color" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/question_design"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Есть ли склонность к алкоголизму у кого-то одного?"
            android:textColor="@color/main_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="80dp"
                android:background="@drawable/check_button"
                android:contentDescription="left"
                android:text="Есть"
                android:textColor="@drawable/click_button"
                android:onClick="yes"
                tools:ignore="TouchTargetSizeCheck"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:background="@drawable/check_button"
                android:contentDescription="right"
                android:text="Нет"
                android:onClick="no"
                android:textColor="@drawable/click_button" />
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_instruction_back"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/warning_button_design"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:onClick="startCheck"
        android:textColor="@drawable/warning_button_design"
        android:text="Далее" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:layout_height="wrap_content"
        android:textColor="@color/warning_text"
        android:text="" />

</RelativeLayout>