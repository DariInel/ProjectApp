<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Questionnaire_3_4">

    <FrameLayout
        android:id="@+id/layout_header_title_upload"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/text_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="title_upload"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Пожалуйста, пройдите опрос:"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/question_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/question_design"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Вопрос 11/12"
            android:textColor="@color/main_color" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/question_design"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Обмениваетесь идеями?"
            android:textColor="@color/main_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/always"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="105dp"
                android:textSize="16dp"
                android:background="@drawable/check_button"
                android:contentDescription="left"
                android:text="Всегда"
                android:onClick="btn1"
                android:textColor="@drawable/click_button"
                tools:ignore="TouchTargetSizeCheck"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/sometimes"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="105dp"
                android:background="@drawable/check_button"
                android:contentDescription="right"
                android:onClick="btn3"
                android:text="Никогда"
                android:textAllCaps="false"
                android:textColor="@drawable/click_button"
                android:textSize="16dp" />

            <Button
                android:id="@+id/never"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:background="@drawable/check_button"
                android:contentDescription="right"
                android:text="Иногда"
                android:onClick="btn2"
                android:textColor="@drawable/click_button"
                android:textAllCaps="false" />
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_instruction_back"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/warning_button_design_last"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:onClick="startCheck"
        android:textColor="@drawable/warning_button_design_last"
        android:text="Далее"
        android:textAllCaps="false"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewError"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:layout_height="wrap_content"
        android:textColor="@color/warning_text"
        android:text="" />

</RelativeLayout>