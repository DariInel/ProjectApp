<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="как деловых отношений     -"
                android:textColor="@color/main_color"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:padding="3dp"
                android:background="@drawable/output_m_design"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0 лет"
                android:textColor="@color/main_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="как семейных отношений   -"
                android:textColor="@color/main_color_pink"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:padding="3dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/output_w_design"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="0 лет"
                android:textColor="@color/main_color_pink" />
        </LinearLayout>



        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/textView_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Характеристика мужчины"
                android:textColor="@color/main_color_pink"
                android:textSize="12sp"
                android:background="@drawable/male_result"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/textView_w"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="match_parent"
                android:textColor="@color/main_color"
                android:text="Характеристика женщины"
                android:background="@drawable/female_result"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_header_title_upload"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/text_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="title_upload"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Результат анализа"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Совместимость пары:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/button_instruction_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/warning_button_design"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:onClick="startMain"
        android:textColor="@drawable/warning_button_design"
        android:text="   Вернуться на главную   " />

</RelativeLayout>